<project basedir="../.." default="separate-jars">
	<import>
		<url url="https://raw.githubusercontent.com/dkpro/resource-packager/0.7.0/ant-macros.xml"/>
	</import>

	<!-- 
	  - Output package configuration
	  -->
	<property name="outputPackage" value="com/github/horsmann/fastsubs"/>

	<target name="local-maven">
		<property name="install-artifact-mode" value="local"/>
		<antcall target="separate-jars"/>
	</target>

	<target name="remote-maven">
		<property name="install-artifact-mode" value="remote"/>
		<antcall target="separate-jars"/>
	</target>

	<target name="separate-jars" depends="install-executables"/>

	<target name="install-executables">
		<property name="version.bin" value="20150415.1"/>

		<mkdir dir="target/download"/>

		<!-- OSX -->
		<mkdir dir="target/model-staging/com/github/horsmann/fastsubs/osx-x86_64"/>

		<get 
	    		src="https://bintray.com/inofficalbinarystore/generic/download_file?file_path=fastsubs-omp.osx-x86_64.tar.gz" 
	    		dest="target/download/fastsubs-omp.osx-x86_64.tar.gz" 
	    		skipexisting="true"/>
		<gunzip 
				src="target/download/fastsubs-omp.osx-x86_64.tar.gz"
				dest="target/download/fastsubs-omp.osx-x86_64.tar"/>
		<untar 
				src="target/download/fastsubs-omp.osx-x86_64.tar"
				dest="target/model-staging/com/github/horsmann/fastsubs-omp/osx-x86_64">
			<patternset>
				<include name="*" />
			</patternset>
			<mapper type="flatten" />
		</untar>

		<echo file="target/model-staging/com/github/horsmann/fastsubs-omp/osx-x86_64/README">
			fastsubs Github.com hash id 31de2e7b589a56601e2adbbf8fbf6cc88965ece8
		</echo>

		<propertyfile
		    file="target/model-staging/com/github/horsmann/fastsubs-omp/osx-x86_64/manifest.properties">
			<entry  key="fastsubs-omp" value="executable"/>
		</propertyfile>

		<!-- Linux 64 -->
			<mkdir dir="target/model-staging/com/github/horsmann/fastsubs-omp/linux-x86_64"/>

			<get 
		    		src="https://bintray.com/inofficalbinarystore/generic/download_file?file_path=fastsubs-omp.linux-x86_64.tar.gz" 
		    		dest="target/download/fastsubs-omp.linux-x86_64.tar.gz" 
		    		skipexisting="true"/>
			<gunzip 
					src="target/download/fastsubs-omp.linux-x86_64.tar.gz"
					dest="target/download/fastsubs-omp.linux-x86_64.tar"/>
			<untar 
					src="target/download/fastsubs-omp.linux-x86_64.tar"
					dest="target/model-staging/com/github/horsmann/fastsubs-omp/linux-x86_64">
				<patternset>
					<include name="*" />
				</patternset>
				<mapper type="flatten" />
			</untar>

			<echo file="target/model-staging/com/github/horsmann/fastsubs-omp/linux-x86_64/README">
				fastsubs Github.com hash id 31de2e7b589a56601e2adbbf8fbf6cc88965ece8
			</echo>

			<propertyfile
			    file="target/model-staging/com/github/horsmann/fastsubs-omp/linux-x86_64/manifest.properties">
				<entry  key="fastsubs-omp" value="executable"/>
			</propertyfile>

		<jar 
			destfile="target/com.github.horsmann.fastsubs-omp-bin-${version.bin}.jar" 
			compress="true">
			<fileset dir="target/model-staging">
				<include name="META-INF/**/*"/>
				<include name="**/*"/>
			</fileset>
		</jar>

		<generate-pom 
			groupId="com.github.horsmann"
			artifactId="com.github.horsmann.fastsubs-omp-bin" 
			version="${version.bin}"/>

		<install-artifact 
			file="target/com.github.horsmann.fastsubs-omp-bin-${version.bin}.jar"
			groupId="com.github.horsmann"
			artifactId="com.github.horsmann.fastsubs-omp-bin" 
			version="${version.bin}"/>
		<clean-pom/>
		<delete dir="target/model-staging"/>
		<delete dir="target/download"/>
	</target>
</project>